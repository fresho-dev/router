{
  "name": "@fresho/router",
  "engines": {
    "node": ">=22"
  },
  "version": "0.3.2",
  "description": "Type-safe route definitions with auto-generated clients and OpenAPI docs",
  "license": "MIT",
  "author": "fresho.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fresho-dev/router.git"
  },
  "bugs": {
    "url": "https://github.com/fresho-dev/router/issues"
  },
  "homepage": "https://github.com/fresho-dev/router#README.md",
  "keywords": [
    "router",
    "routing",
    "typescript",
    "type-safe",
    "cloudflare-workers",
    "deno",
    "bun",
    "http",
    "api",
    "rest",
    "middleware",
    "openapi",
    "validation",
    "schema"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./auth": {
      "types": "./dist/auth/index.d.mts",
      "import": "./dist/auth/index.mjs"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.mts",
      "import": "./dist/middleware/index.mjs"
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts src/auth/index.ts src/middleware/index.ts",
    "clean": "rm -rf ./dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome check . && npm run typecheck",
    "lint:fix": "biome check --write .",
    "test": "npm run lint && node --import tsx --test 'src/**/*.test.ts'"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^22.0.0",
    "tsdown": "^0.17.0-beta.6",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "files": [
    "dist",
    "docs",
    "LICENSE"
  ]
}
