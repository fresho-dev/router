    "test": "npm run lint && node --import tsx --test 'src/**/*.test.ts'",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "files": [
    "src",
    "LICENSE"
  ]
