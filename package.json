{
  "name": "typed-routes",
  "version": "0.1.0",
  "description": "Type-safe route definitions with auto-generated clients and OpenAPI docs",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./middleware": "./src/middleware/index.ts"
  },
  "scripts": {
    "test": "node --import tsx --test $(find src -name '*.test.ts')",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "files": [
    "src"
  ]
}
